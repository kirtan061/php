<?php
$courses = ["BCA", "B.Sc Computer Science", "MCA", "MBA", "B.Com"];
$colors = ["c1", "c2", "c3", "c4", "c5"];
foreach ($courses as $i => $course) {
$class = $colors[$i % count($colors)];
echo "<div class='course $class'>$course</div>";
}
